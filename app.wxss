/**app.wxss**/
@import "./zanui/index.wxss";

.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    box-sizing: border-box;
}
page{
 background-color:#f5f5f5;
 line-height: 1.6;
  font-family: -apple-system-font, "Helvetica Neue", sans-serif, Microsoft Yahei;

}
text{
    font-size: 26rpx;
}

.blue{
   color: #0096ec!important;
 }
 .black{
   color: #333;
 }
 .gary{
   color: #666;
 }

 .font28{
   font-size: 28rpx;
 }
 .font30{
   font-size: 30rpx;
 }
 .font26{
   font-size: 26rpx;
 }
 .font22{
   font-size: 22rpx;
 }
 .font32{
   font-size: 32rpx!important;
 }
input{
    font-family: MicroSoft YaHei;
}
.dis-inline{
  display: inline-block;
}
.mart10{
  margin-top: 10rpx;
}
.mart20{
  margin-top: 20rpx;
}
.padd20{
  padding: 20px;
}
.fl{
  float: left;
}
.fr{
  float: right;
}
.text-r{
  text-align: right;
}
.sumbit-box{
  padding: 20rpx;
}
.sumbit-btn{
 width: 100%;
 background: #0096eb;
 color: #fff;
 font-family: Microsoft Yahei;
}
/* 搜索框 */
.seach-box{
  width: 100%;
  padding: 0 20rpx 25rpx 20rpx;
  overflow: hidden;
  height: 60rpx;
  background: #fff;
  border-bottom: 1px solid #e6e6e6;
}
.seach-box-input{
  width: 82%;
  height: 60rpx;
  position: relative;
  display: inline-block;
  vertical-align: middle;
}
.seach-box-input image{
  width: 28rpx;
  height: 29rpx;
  position: absolute;
  top: 16rpx;
  left: 20rpx;
}
.seach-box-input input{
  height: 60rpx;
  width: 100%;
  font-size: 24rpx;
  color: #666;
  line-height: 60rpx;
  background: #f5f5f5;
  border-radius: 60rpx;
  padding-left: 66rpx;
  box-sizing: border-box;
}
.seach-box-btn{
  width: 15%;
  font-size: 24rpx;
  display: inline-block;
  vertical-align: middle;
  text-align: center;
  color: #0096ec;
}


.recommend-shop{
  background: #fff;
  border-bottom: 1px solid #e6e6e6;
  overflow: hidden;
}
.recommend-shop-pic{
  width: 32%;
  height: 146rpx;
  float: left;
}
.recommend-shop-pic image{
  width: 100%;
  height: 100%;
  max-width: 100%;
  display: block;
  object-fit: cover;
}
.recommend-shop-name{
  width: 65%;
  float: right;
  position: relative;
}
.grade{
  position: absolute;
  width: 96rpx;
  height: 27rpx;
  right: 0;
  top: 10rpx;
}
.shop-name{
  font-size: 30rpx;
  width: 70%;
  height: 30rpx;
  line-height: 30rpx;
  overflow: hidden;
  display: inline-block;
  color: #2e2e2e;
}
.score{
  display: flex;
  flex-direction: row;
}
.stars{
  width: 158rpx;
  height: 23rpx;
  background-image: url("data:image/png;base64,");
  background-size: 320rpx 23rpx;
  display:inline-block;
}
.stars.stars5{
  background-position: 0 0;
}
.stars.stars4{
  background-position: -34rpx 0;
}
.stars.stars3{
  background-position: -66rpx 0;
}
.stars.stars2{
  background-position: -98rpx 0;
}
.stars.stars1{
  background-position: -131rpx 0;
}
.stars.stars0{
  background-position: -163rpx 0;
}
.score text{
  font-size: 22rpx;
  vertical-align: middle;
  margin-left: 10rpx;
  color: #999;
  display: inline-block;
  line-height: 23rpx;
}
.shop-text text{
 font-size: 20rpx;
 display: inline-block;
 color: #0096ec;
 padding: 2rpx 4rpx;
 border: 1px solid #0096ec;
 border-radius: 3px;
 margin-right:10rpx;
}
.shop-address{
  flex-direction: row;
  height: 36rpx;
  width: 100%;
}
.shop-address-box{
  width: 75%;
  display: inline-block;
  font-size: 22rpx;
  height: 36rpx;
  line-height: 36rpx;
  color: #999;
  overflow: hidden;
  vertical-align: middle;
}
.shop-kilometer{
  width: 25%;
  display: inline-block;
  color: #999;
  height: 36rpx;
  line-height: 36rpx;
  font-size: 22rpx;
  vertical-align: middle;
  text-align: right;
}
.shop-drop{
 margin-top: 6rpx;
 width: 100%;
 position: relative;
}
.shop-activity-list{
  width: 100%;
  height: 26rpx;
  margin-bottom: 10rpx;
}
.shop-activity-list text{
  font-size: 20rpx;
  vertical-align: middle;
  color: #969696;
  margin-left: 8rpx;
  width: 60%;
  height: 26rpx;
  line-height: 26rpx;
  display: inline-block;
  overflow: hidden;
}
.shop-activity-pic{
  width: 91rpx;
  display: inline-block;
}
.shop-activity-pic image{
  width: 91rpx;
  height: 26rpx;
  vertical-align: middle;
}
.triangle-drop{
  width: 17rpx;
  height: 10rpx;
  position: absolute;
  right: 0;
  top: 25rpx;
}
.shop-drop-content{
  width: 100%;
}
.hide{
 display: none;
}
.show{
 display: block;
}

/* 评价 */
.comment-shop-box{
  padding:40rpx 20rpx 20rpx;
}
.comment-user{
  margin-bottom: 20rpx;
  overflow: hidden;
}
.comment-user-pic{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  vertical-align: middle;
}
.comment-user-text{
  height: 45rpx;
  vertical-align: middle;
}
.comment-user-info{
  margin-left: 16rpx;
  vertical-align: middle;
}
.comment-author-name{
  font-size: 28rpx;
  color: #333;
  vertical-align: middle;
  margin-right: 10rpx;
}
.comment-author-grade{
  width: 76rpx;
  height: 28rpx;
  vertical-align: middle;
}
.comment-author-rz{
  font-size: 24rpx;
  color: #b2b2b2;
}
.comment-content text{
  font-size: 28rpx;
  color: #333;
  display: block;
  line-height: 42rpx;
}
.comment-content-pic{
  width: 100%;
  overflow: hidden;
  margin-top: 20rpx;
}
.comment-pic{
  width: 33.333%;
  height: 100%;
  padding: 0 5rpx;
  display: inline-block;
  box-sizing: border-box;
}
.comment-pic-img{
  position: relative;
  width: 100%;
  padding-top: 100%;
  background: #000;
}
.comment-pic-img image{
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
  max-width: 100%;
  display: block;
  object-fit: cover;
}
.comment-time{
  margin-top: 10rpx;
}
.comment-time text{
  font-size: 24rpx;
  color: #b2b2b2;
}
.comment-reply{
  background: #f5f5f5;
  padding: 20rpx;
  margin-top: 10rpx;
}
