.list-collect{
  width: 100%;
  border-top: 1px solid #e6e6e6;
  padding: 30rpx 20rpx;
  background: #fff;
  box-sizing: border-box;
  position: relative;
}
.collect-shop-pic{
  width: 86rpx;
  height: 86rpx;
  border: 1px solid #e6e6e6;
  border-radius: 10rpx;
  vertical-align: middle;
  margin-right: 20rpx;
}
.collect-shop-text{
  vertical-align: middle;
  width: 50%;
}
.collect-shop-name{
  font-size: 30rpx;
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  overflow: hidden;
  color: #333;
  display: block;
}
.collect-shop-follow{
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
  display: block;
}
.collect-shop-triangle{
  width: 12rpx;
  height: 22rpx;
  position: absolute;
  right: 20rpx;
  top: 40rpx;
}