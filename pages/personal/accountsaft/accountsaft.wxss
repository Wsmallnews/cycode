page{
  background-color: #fff;
}
.account-logo{
  width: 100%;
  background: #0085e7;
  height: 360rpx;
  position: relative;
}
.logo-pic{
  width: 180rpx;
  height: 180rpx;
  position: absolute;
  left: 50%;
  margin-left: -90rpx;
  top: 50%;
  margin-top: -90rpx;
}
.password-box{
  padding: 60rpx;
  width: 100%;
  box-sizing: border-box;
}
.password-list{
  padding: 26rpx 0;
  border-bottom:1px solid #e6e6e6; 
  display: flex;
  flex-direction: row;
  align-items: center;
}
.password-list text{
  display: inline-block;
  width: 180rpx;
  font-size: 30rpx;
  color: #808080;
}
.password-text{
  width: 100%;
  font-size: 30rpx;
}